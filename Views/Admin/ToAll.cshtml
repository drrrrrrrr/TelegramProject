
@{
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="content container">
    <div class="row">
        <div class="col-md-9 col-md-offset-3">
            <h2 class="page-title">Отправить клиентам в телеграм<small></small></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <section class="widget">
                <header>
                    <h4><i class="fa fa-file-alt"></i>Рассылка  <small>всем пользователям, пользующихся магазином</small></h4>
                </header>
                <div class="body">
                    <form action="/Admin/ToAll" class="form-horizontal" method="post" id="x" novalidate="novalidate" data-validate="parsley">
                        <fieldset>
                            <div class="control-group">
                                <label for="title" class="control-label">Title <span class="required">*</span></label>
                                <div class="controls form-group">
                                    <input type="text" id="title" name="title" class="form-control"
                                           required="required">
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="description" class="control-label">Description</label>
                                <div class="controls form-group">
                                    <textarea id="description" rows="3" name="text" class="form-control"></textarea>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">Отправить</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

