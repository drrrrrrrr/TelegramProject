@model List<telegramBod.Models.ShopsModel>

@{
    Layout = "~/Views/Shared/_MainAdmin.cshtml";
}
<div class="row">
    <div class="row">
        <div class="col-md-9 col-md-offset-3">
            <h2 class="page-title">Товары вашего магазина<small></small></h2>
        </div>
    </div>
    <div class="col-md-10 col-md-offset-2">
        <section class="widget">
            <header>
                <h4>
                    <i class="fa fa-list-ol"></i>
                    Ваш магазин
                </h4>
            </header>
            @{int l = 0; }
            <div class="body">
                <table class="table table-striped table-images">
                    <thead>
                        <tr>
                            <th class="hidden-xs-portrait">#</th>
                            <th>Имя магазина</th>
                            <th>E-mail</th>
                            @*<th class="hidden-xs-portrait">Продукт</th>
                            <th class="hidden-xs">Цена</th>
                            <th class="hidden-xs">Описание</th>*@
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>

                                    @{int k = 0;}
                            
                                              @for (int i = 0; i < Model.Count(); i++)
                                              {

                                                  { k++; }
                        <tr>
                            <td>@k</td>

                                    @if (Model[i].nameShop == " ")
                                    {
                                    <td>Name</td>
                                    }
                                    else
                                    {
                                     <td><a href="/Admin/Move?name=@Model[i].nameShop">Перейти</a></td>
                                    }

                            <td>@Model[i].nameUser</td>
                            <td>
                                <form action="/Admin/DeleteShop?email=@Model[i].nameUser" method="post">
                                    <input value="Удалить" class="btn btn-sm btn-primary" type="submit" />
                                </form>
                            </td>
<tr>

                                                    @for (int j = 0; j < @Model[i].product.Count(); j++)
                                                         {
                                                              <td>
                                                                @Model[i].product[j].ProductName
                                                              </td>
                                                          }
                                                          
                                                     </tr>
                                                </tr>

                                              }
                    </tbody>

                </table>
                @*<div class="clearfix">
                        <div class="pull-right">
                            <button class="btn btn-default btn-sm">
                                Send to ...
                            </button>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-inverse dropdown-toggle" data-toggle="dropdown">
                                    &nbsp; Clear &nbsp;
                                    <i class="fa fa-caret-down"></i>
                                </button>

                            </div>
                        </div>

                    </div>*@
            </div>
        </section>
    </div>
</div>