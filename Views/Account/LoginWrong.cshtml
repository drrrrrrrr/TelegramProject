@model telegramBod.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <title>BotShop</title>
    <link href="~/Css/application.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="img/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta charset="utf-8">
    <script src="~/Library/jquery/jquery-2.0.3.min.js"></script>
    @*<script src="~/Library/jquery/jquery.pjax.js"></script>*@
    <script src="~/Library/backbone/underscore-min.js"></script>
    <script src="js/settings.js"></script>
</head>
<body>
    <div class="single-widget-container">
        <section class="widget login-widget">
            <header class="text-align-center">
                <h4>Вход</h4>
            </header>
            <div class="body">
                @using (Html.BeginForm("Login", "Account"))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="form-group no-margin">
                            <label for="email">Логин</label>

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="eicon-user"></i>
                                </span>
                                <input id="email" type="email" name="Name" class="form-control input-lg"
                                       placeholder="Your Email">
                            </div>

                        </div>

                        <div class="form-group">
                            <label for="password">Пароль</label>

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="fa fa-lock"></i>
                                </span>
                                @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <input id="password" type="password" name="Password" class="form-control input-lg"
                                       placeholder="Your Password">
                            </div>

                        </div>
                    </fieldset>
                    <div class="form-actions">
                        <h3>Вы ввели неверный пароль</h3>
                        <input type="submit" class="btn btn-block btn-lg btn-danger" />

                        <div class="forgot"><a class="forgot" href="~/Account/Register">Вы не зарегистрированы?</a></div>
                        <div class="forgot"><a class="forgot" href="~/Home/Index">Вернуться в главное меню</a></div>
                    </div>


                }
            </div>
        </section>
    </div>
</body>
</html>