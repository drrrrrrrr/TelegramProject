@model List<telegramBod.Models.Sub>

@{
    Layout = "~/Views/Shared/_Main.cshtml";
}
<div class="row">
    <div class="row">
        <div class="col-md-9 col-md-offset-3">
            <h2 class="page-title">Подписчики<small></small></h2>
        </div>
    </div>
    <div class="col-md-10 col-md-offset-2">
        <section class="widget">
            <header>
                <h4>
                    <i class="fa fa-list-ol"></i>
                    Ваш магазин
                </h4>
            </header>
            @{int l = 0; }
            <div class="body">
                <table class="table table-striped table-images">
                    <thead>
                        <tr>
                            <th class="hidden-xs-portrait">#</th>

                            <th class="hidden-xs-portrait">Электронная почта</th>

                            <th></th>
                        </tr>
                    </thead>

                    <tbody>

                        @{int k = 0;}
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            { k++; }
                            <tr>
                                <td class="hidden-xs-portrait">@k</td>

                                @*<td>
                                        @Model[i].Id
                                    </td>*@
                                <td>
                                    @Model[i].Email
                                </td>
                                @*<td class="hidden-xs-portrait">
                                        <p>
                                            <small>
                                                <strong>@Model[i].Email</strong>
                                            </small>
                                        </p>

                                    </td>*@
                                <td>
                                    <form action="/Admin/DeleteEmail?email=@Model[i].Email" method="post">
                                        <input value="Удалить" class="btn btn-sm btn-primary" type="submit" />
                                    </form>
                                </td>

                            </tr>


                        }
                    </tbody>

                </table>
                @*<div class="clearfix">
                        <div class="pull-right">
                            <button class="btn btn-default btn-sm">
                                Send to ...
                            </button>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-inverse dropdown-toggle" data-toggle="dropdown">
                                    &nbsp; Clear &nbsp;
                                    <i class="fa fa-caret-down"></i>
                                </button>

                            </div>
                        </div>

                    </div>*@
            </div>
        </section>
    </div>
</div>